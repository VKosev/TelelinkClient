
@{
    ViewData["Title"] = "Home Page";
}

    <div class="row">

        <div class="col-sm-5 bg-white  box-shadow border">
            <div class="col-sm-12 text-center text-secondary mt-1">Login Form</div>

            <form style="margin:10px;" asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="InputUsername" class="mb-0">Username</label>
                    <input type="text" class="form-control" id="InputUsername" aria-describedby="emailHelp" placeholder="Username" name="userName">
                </div>

                <div class="form-group">
                    <label for="InputPassword1" class="mb-0">Password</label>
                    <input type="password" class="form-control" id="InputPassword1" placeholder="Password" name="password">
                </div>

                <button type="submit" class="btn btn-primary col-sm-12">Login</button>

                <div class="col-sm-12" style="padding:0;">
                    <small id="emailHelp" class="form-text text-muted">Don't have an account? <a class="ml-0" href="/Account/Register"><i>signup here</i></a></small>
                </div>
            </form>
        </div>
    </div>

