<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Telelink</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container-fluid" style="padding:0;">
            <div class="row">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 col-sm-10">
                    <div class="container" style="margin:0;">
                        <a class="navbar-brand mr-auto" asp-area="" asp-controller="Home" asp-action="Index">Project Telelink</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ml-5">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="App" asp-action="All data">View Data</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="App" asp-action="AddAssignModels">Add/Assign Models</a>
                                </li>
                                <li class="nav-item ml-auto">
                                    <a class="btn btn-danger" asp-controller="Account" asp-action="GenerateFirstAdmin">Generate first admin !</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                <div class="col-sm-2 bg-white border-bottom border-left box-shadow mb-3">
                    @{
                        if (Context.Request.Cookies.ContainsKey("Username"))
                        {
                           <div class="row">
                               <div class="col">
                                   <p class="mb-0">@Context.Request.Cookies["Username"]</p>
                               </div>

                               <div class="col align-content-end text-center">
                                   <a class="text-black-50" asp-controller="Account" asp-action="Logout">logout</a>
                               </div>
                           </div>

                           <div class="row">
                               <div class="col-sm-5">
                                   <a asp-controller="App" asp-action="UserData">profile</a>
                               </div>
                           </div>
                        }
                    }
                </div>
            </div>

        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - HelloWorld - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
